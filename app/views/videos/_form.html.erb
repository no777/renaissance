<%= simple_form_for(@video) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <% if @course !=nil %>
    <%= f.select :course_id, @course.collect{|c|[ c.name, c.id ]}.unshift(["请选择一个Course", 0]), :class => 'xxx' %>  
    <% end %>
    <%= f.input :url %>
    <%= f.input :description %>
    <%= f.input :create_at %>
    <%= f.input :duration %>
    <%= f.input :format %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
