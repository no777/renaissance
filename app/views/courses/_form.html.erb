<%= simple_form_for(@course) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :cover_image_url %>
    <%= f.input :start_at %>
    <%= f.input :end_at %>
    <%= f.input :score %>
    <%= f.input :difficulty %>
    <%= f.input :price %>
    <%= f.input :duration %>
    <%= f.input :type %>
    <%= f.input :peoples %>
    <%= f.input :canvas_id %>
    <%= f.label :tag_list %>
    <%= f.text_field :tag_list %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
