<h1>Listing courses</h1>

<% tag_cloud(@tags, %w(css1 css2 css3 css4)) do |tag, css_class| %>
  <%= link_to tag.name, { :action => :tag, :id => tag.name }, :class => css_class %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Cover image url</th>
      <th>Start at</th>
      <th>End at</th>
      <th>Score</th>
      <th>Difficulty</th>
      <th>Price</th>
      <th>Duration</th>
      <th>Type</th>
      <th>Peoples</th>
      <th>Canvas</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td> <%= link_to course.name, course %> </td>
        <td> <%= link_to image_tag(course.cover_image_url), course %> </td>

        <td><%= course.start_at %></td>
        <td><%= course.end_at %></td>
        <td><%= course.score %></td>
        <td><%= course.difficulty %></td>
        <td><%= course.price %></td>
        <td><%= course.duration %></td>
        <td><%= course.type %></td>
        <td><%= course.peoples %></td>
        <td><%= course.canvas_id %></td>
        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Course', new_course_path %>
<%= link_to 'Import Canvas Course', courses_canvas_list_path %>
